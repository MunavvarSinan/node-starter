{
  "name": "nodejs-docker-starter",
  "version": "1.0.5",
  "description": "A powerful backend starter file for Node.js, Express, Prisma, PostgreSQL, Docker, and TypeScript.",
  "main": "./src/index.js",
  "scripts": {
    "db:console": "docker compose run postgres psql -h postgres -U postgres -d backend",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "tsx ./migration.ts",
    "db:studio": "drizzle-kit studio",
    "migrate:reset": "drizzle-kit reset",
    "migrate:status": "drizzle-kit status",
    "rebuild:be": "docker compose build backend && docker compose rm --force --stop backend && docker compose up -d backend",
    "start": "node ./dist/index.js",
    "dev": "pnpm build && pnpm start",
    "build": "tsup src --format cjs,esm --out-dir dist",
    "start:docker": "pnpm build && node --inspect=0.0.0.0 dist/index.js",
    "watch": "nodemon"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0",
  "volta": {
    "node": "20.17.0"
  },
  "dependencies": {
    "@tsconfig/node20": "^20.1.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "inversify": "^6.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.7",
    "openapi-types": "^12.1.3",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "winston": "^3.14.2",
    "winston-transport": "^4.7.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.16.5",
    "@types/pg": "^8.11.10",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4",
    "rimraf": "^5.0.10",
    "tsup": "^8.2.4"
  }
}